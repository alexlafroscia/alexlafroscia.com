{
  "name": "alexlafroscia.com",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin prettier-plugin-svelte .",
    "format": "prettier --write --plugin prettier-plugin-svelte .",
    "test": "run-p --print-label 'test:*'",
    "test:unit": "vitest run",
    "test:acceptance": "yarn build && PLAYWRIGHT_BASE_URL=http://localhost:4173 start-server-and-test 'yarn preview' http://localhost:4173 'yarn test:acceptance:run'",
    "test:acceptance:run": "playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@mapbox/rehype-prism": "^0.8.0",
    "@playwright/test": "^1.28.0",
    "@rollup/plugin-yaml": "^4.0.1",
    "@storybook/addon-essentials": "^8.0.10",
    "@storybook/addon-interactions": "^8.0.10",
    "@storybook/addon-links": "^8.0.10",
    "@storybook/blocks": "^8.0.10",
    "@storybook/svelte": "^8.0.10",
    "@storybook/sveltekit": "^8.0.10",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@sveltejs/kit": "^2.43.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/unist": "^2.0.6",
    "@types/xml": "^1.0.11",
    "autoprefixer": "^10.4.0",
    "feed": "^4.2.2",
    "hastscript": "^7.0.2",
    "jsdom": "^19.0.0",
    "mdsvex": "^0.12.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "rehype": "^11.0.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "start-server-and-test": "^1.14.0",
    "storybook": "^8.0.10",
    "svelte": "^5.39.6",
    "svelte-check": "^4.3.2",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^7.1.7",
    "vitest": "^1.6.0",
    "web-vitals": "^3.1.0"
  },
  "packageManager": "yarn@3.3.0",
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.17"
  }
}
